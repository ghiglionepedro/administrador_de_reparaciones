<odoo>
  <data>
    <record id="product_product_tipo_producto_tree_view" model="ir.ui.view">
        <field name="name">product.product.tipo.producto.tree</field>
        <field name="model">product.product.tipo.producto</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Tipo de producto">
                <field name="nombre" />
            </tree>
        </field>
    </record>


    <record id="product_product_tipo_producto_form_view" model="ir.ui.view">
        <field name="name">product.product.tipo.producto.form</field>
        <field name="model">product.product.tipo.producto</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Tipo de producto">
                <group>
                    <field name="nombre" />
                </group>
            </form>
        </field>
    </record>

    <!--Agregar el campo en la vista de product.product-->

        <record model="ir.ui.view" id="product_tree_view">
            <field name="name">product.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="tipo_producto_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_form_view">

        <field name="name">product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="tipo_producto_id"/>
                </field>
            </field>
        </record>

  </data>
</odoo>
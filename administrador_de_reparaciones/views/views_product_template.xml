<odoo>
  <data>
        <record model="ir.ui.view" id="repair_product_template_tree_view">
            <field name="name">repair.product.template.tree</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="tipo_equipo_id" string="Tipo de equipo" create="1"/>
                    <field name="marca_id" string="Marca de equipo" create="1" domain="[('tipo_equipo_id', '=', tipo_equipo_id)]"/>
                    <field name="modelo_id" string="Modelo de equipo" create="1" domain="[('modelo_id', '=', modelo_id)]"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="repair_product_template_form_view">
            <field name="name">repair.product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='sales']" position="before">
                        <page string="Reparaciones" name="repairs">
                            <group>
                                <field name="tipo_equipo_id" string="Tipo de equipo" create="1"/>
                                <field name="marca_id" string="Marca de equipo" create="1" domain="[('tipo_equipo_id', '=', tipo_equipo_id)]"/>
                                <field name="modelo_id" string="Modelo de equipo" create="1" domain="[('modelo_id', '=', modelo_id)]"/>
                            </group>
                        </page>
                </xpath>
            </field>
        </record>

  </data>
</odoo>
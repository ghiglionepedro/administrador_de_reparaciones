<odoo>
  <data>
        <record model="ir.ui.view" id="repair_product_tree_view">
            <field name="name">repair.product.product.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="tipo_equipo_id"/>
                    <field name="marca_id"/>
                    <field name="modelo_id"/>
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="repair_product_form_view">
            <field name="name">repair.product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales']" position="before">
                        <page string="Reparaciones" name="repairs">
                            <field name="tipo_equipo_id"/>
                            <field name="marca_id"/>
                            <field name="modelo_id"/>
                        </page>
                </xpath>
            </field>
        </record>
  </data>
</odoo>
<odoo>
  <data>
            <record model="ir.ui.view" id="product_tree_view">
            <field name="name">product.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="detailed_type" position="after">
                    <field name="tipo_equipo_id"/>
                    <field name="marca_id"/>
                    <field name="modelo_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_form_view">
            <field name="name">product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                    <field name="Sales" position="before">
                        <page string="Reparaciones" name="repairs">
                            <field name="tipo_equipo_id"/>
                            <field name="marca_id"/>
                            <field name="modelo_id"/>
                        </page>
                    </field>
                </field>
        </record>
  </data>
</odoo>
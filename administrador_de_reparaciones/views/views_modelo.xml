<odoo>
  <data>
    <record id="product_product_modelos_tree_view" model="ir.ui.view">
        <field name="name">product.product.modelo.tree</field>
        <field name="model">product.product.modelo</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Modelos">
                <field name="tipo_equipo_id" widget="many2one_select" />
                <field name="marca_id" widget="many2one_select"  domain="[('tipo_equipo_id', '=', tipo_equipo_id)]"/>
                <field name="nombre" />
            </tree>
        </field>
    </record>


    <record id="product_product_modelos_form_view" model="ir.ui.view">
        <field name="name">product.product.modelo.form</field>
        <field name="model">product.product.modelo</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Modelo">   
                <sheet>
                    <group>
                        <field name="tipo_equipo_id" widget="many2one_select"  create="1"  update="1"/>
                        <field name="marca_id" widget="many2one_select" domain="[('tipo_equipo_id', '=', tipo_equipo_id)]" />
                        <field name="nombre" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>



  </data>
</odoo>